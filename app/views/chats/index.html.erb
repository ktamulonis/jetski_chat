<div class="chats-page">
  <h2>Chats</h2>

  <ul>
    <% @chats.each do |chat| %>
      <li>
        <a href="/chats/<%= chat.id %>">
          <%= chat.title %>
        </a>
      </li>
    <% end %>
  </ul>

  <form action="/chats" method="post" style="display:inline">
    <button type="submit" class="new-chat-btn">+ New Chat</button>
  </form>
</div>
